{
  "compilerOptions": {
    "assets": [
      {
        "include": "../config/*.yml",
        "outDir": "./dist/config",
        "watchAssets": true
      },
      {
        "include": "../config/*.pem",
        "outDir": "./dist"
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ]
  }
}
